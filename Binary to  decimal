package com.company;
import java.util.*;
public class binarytoDecimal {
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int binary=sc.nextInt();
        int temp;
        int decimal=0;
        int n=0;
        while(binary!=0)
        {
            temp=binary%10;
            decimal+=temp*Math.pow(2,n);
            n++;
            binary/=10;
        }
        System.out.println(decimal);
    }
}
